<form id="FrmDlItem" action="@Model.Url" title="@Model.Title" data-target="@(Equals(Model.Target,null)? string.Empty :Model.Target)"
      accept-charset="utf-8" enctype="multipart/form-data" class="form-horizontal @(Equals(Model.Class,null))" method="POST">
    <div class="row mt">
        <div class="col-lg-12 no-padding">
            <div class="form-panel no-margin">
                <div class="container-fluid">
                    <div class="form-group form-group-title">
