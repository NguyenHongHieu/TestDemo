                        </div>
                    </div>
                    <div class="form-group form-group-name">
                        <div class="col-sm-12 txtct ">
                            <label class="control-label name center" title="">@Model.Content</label>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-sm-12 txtct">
                            @if (Request.IsAjaxRequest())
                            {
                                <button class="btn btn-default btn-sm closeDialog" type="button">@string.Format("Cancel")</button>
                            }
                            @if (Model.IsMulti)
                            {
                                <input type="hidden" name="IDs" value="@Model.IDs" />
                            }
                            else
                            {
                                <input type="hidden" name="ID" value="@Model.ID" />
                            }
                            <button class="btn btn-danger btn-sm" type="submit">@string.Format("Delete")</button>
                        </div>
                    </div>
