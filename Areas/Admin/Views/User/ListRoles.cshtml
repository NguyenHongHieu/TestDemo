
@using demo1.CodeLogic.Customs
@using demo1.CodeLogic
@using demo1.Models.QrCode
@using demo1.CodeLogic.Enums
@{
    var roles = (Dictionary<int, string>)ViewBag.Roles;
}
<table class="table table-striped table-bordered table-advance table-hover">
    <thead>
        <tr>
            <th class="text-center">Order</th>
            <th class="text-center">Role</th>
        </tr>
    </thead>
    <tbody>
        @if (roles.Count > 0)
        {
            var Order = ViewBag.Paging.PageStart;
            foreach (var item in roles)
            {
                Order++;
                <tr>
                    <td class="text-center">@Order</td>
                    <td>@item.Value</td>
                </tr>
            }

        }

    </tbody>
</table>
<div class="row DTTTFooter">
    @if (roles.Count <= 0)
    {
        <div class="dataTables_info col-sm-12 text-center padt10">
            <strong class="gray">
                @string.Format("There are no records")
            </strong>
        </div>
    }
    else
    {
        <div class="col-md-3">
            <div class="dataTables_info text-center" id="searchable_info" role="status" aria-live="polite">
                <div>
                    <strong class="gray">
                        @string.Format("There are total {0} records", roles.Count)
                    </strong>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
        <div class="col-sm-3 ">
            @ViewBag.Paging.RenderAdmin("#div-ListRoles")
        </div>
    }
</div>
